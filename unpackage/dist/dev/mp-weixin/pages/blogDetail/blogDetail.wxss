/* 全局系统样式定义 */
.blog-detail-container {
  padding: 30rpx 0 108rpx;
}
.detail-title {
  padding: 0 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.detail-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.detail-header .detail-logo {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.detail-header .detail-logo image {
  width: 100%;
  height: 100%;
}
.detail-header .detail-header-content {
  width: 100%;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  font-size: 24rpx;
  align-items: flex-start;
}
.detail-header .detail-header-content .detail-header-content-title {
  font-size: 28rpx;
  color: #333;
}
.detail-header .detail-header-content .detail-header-content-info {
  color: #999;
}
.detail-header .detail-header-content .detail-header-content-info text {
  margin-right: 20rpx;
}
.detail-header .detail-header-button {
  padding: 0 30rpx;
  flex-shrink: 0;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: #f25037;
}
.detail-content-container {
  margin-top: 40rpx;
  /* 评论列表样式 */
}
.detail-content-container .detail-html {
  padding-left: 12rpx;
}
.detail-content-container .detail-comment {
  margin-top: 60rpx;
}
.detail-content-container .detail-comment .comment-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1px solid #ddd;
}
.detail-content-container .detail-comment .comment-content-container {
  padding: 0 30rpx;
  border-bottom: 1px solid #eee;
}
.detail-content-container .detail-comment .no-data {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}
.detail-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 100%;
  height: 88rpx;
  border-top: 1px #f5f5f5 solid;
  background-color: #FFFFFF;
  box-sizing: border-box;
}
.detail-bottom .input-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  margin-left: 20rpx;
  padding: 0 20rpx;
  flex-grow: 1;
  height: 60rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.detail-bottom .input-container text {
  font-size: 28rpx;
  color: #999;
}
.detail-bottom .detail-bottom-icons {
  display: flex;
  flex-shrink: 0;
  padding: 0 20rpx;
}
.detail-bottom .detail-bottom-icon-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 88rpx;
}

