/* 全局系统样式定义 */
page {
  background-color: #f5f5f5;
}
.label-container .label-box {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.label-container .label-box .label-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #f5f5f5;
}
.label-container .label-box .label-header .label-title {
  color: #666;
}
.label-container .label-box .label-header .label-edit {
  font-weight: bold;
  color: #30b33a;
}
.label-container .label-box .label-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 0 30rpx 30rpx;
}
.label-container .label-box .label-content .label-content-item {
  position: relative;
  padding: 4rpx 10rpx;
  margin: 24rpx 20rpx 0 0;
  border-radius: 10rpx;
  border: 1px solid #666;
  font-size: 28rpx;
  color: #666;
}
.label-container .label-box .label-content .label-content-item .icon-close {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  background-color: #fff;
  border-radius: 50%;
}
.label-container .label-box .no-data {
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

