/* 全局系统样式定义 */
page {
  background-color: #f5f5f5;
  height: 100%;
  display: flex;
}
.search-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.search-container .search-wrapper {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.search-container .search-wrapper .search-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  font-size: 28rpx;
  color: #666666;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.search-container .search-wrapper .search-header .history-text {
  color: #f25037;
}
.search-container .search-wrapper .search-header .history-clean {
  color: #30b33a;
  font-weight: bold;
}
.search-container .search-wrapper .search-history-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 30rpx;
  padding-top: 0;
}
.search-container .search-wrapper .search-history-content .history-content-item {
  padding: 4rpx 20rpx;
  margin-top: 24rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  border: 1px solid #666;
  font-size: 28rpx;
  color: #666;
}
.search-container .no-data {
  height: 400rpx;
  line-height: 400rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
.search-container .search-list-container {
  height: 100%;
  flex: 1;
  overflow: hidden;
}

