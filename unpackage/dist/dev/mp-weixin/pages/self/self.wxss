page {
  background-color: #f5f5f5;
}
.my-header {
  position: relative;
  padding-bottom: 30rpx;
}
.my-header .my-header-background {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  opacity: .3;
  -webkit-filter: blur(16rpx);
          filter: blur(16rpx);
}
.my-header .my-header-background image {
  width: 100%;
  height: 100%;
}
.my-header .my-header-logo {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  position: relative;
  z-index: 10;
}
.my-header .my-header-logo .my-header-logo-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.my-header .my-header-logo .my-header-logo-box image {
  width: 100%;
  height: 100%;
}
.my-header .my-header-logo .user-name {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.my-header .my-header-info {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
}
.my-header .my-header-info .my-header-info-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}
.my-header .my-header-info .my-header-info-box .my-header-info-title {
  font-size: 28rpx;
  color: #333;
}
.my-content .my-content-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  color: #333;
  font-size: 28rpx;
}
.my-content .my-content-list .my-content-list-title {
  display: flex;
  align-items: center;
  flex-grow: 1;
  /*版本样式 */
}
.my-content .my-content-list .my-content-list-title .icons {
  margin-right: 10rpx;
}
.my-content .my-content-list .my-content-list-title .version-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  flex-grow: 1;
}
.my-content .my-content-list .my-content-list-title .version-container .version {
  margin-right: 40rpx;
  color: #888;
  font-weight: bold;
}
.my-content .my-content-list .my-content-list-title .version-container .new-version-tip {
  font-size: 20rpx;
  color: #f25037;
}
.my-content .sign-out {
  margin: 120rpx 20rpx 0;
}
.my-content .company-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

