/* 全局系统样式定义 */
page {
  height: 100%;
  display: flex;
}
.follow-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}
.follow-container .follow-tab {
  height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  flex-direction: row;
  box-sizing: content-box;
}
.follow-container .follow-tab .follow-tab-box {
  height: 60rpx;
  display: flex;
  width: 100%;
  border-radius: 10rpx;
  border: 1px solid #f25037;
}
.follow-container .follow-tab .follow-tab-box .follow-tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  flex-direction: row;
  color: #666;
  font-size: 28rpx;
  flex-grow: 1;
}
.follow-container .follow-tab .follow-tab-box .follow-tab-item:first-child {
  border-right: 1px solid #f25037;
}
.follow-container .follow-tab .follow-tab-box .follow-tab-item.active {
  color: #f25037;
}
.follow-container .follow-list-container {
  flex: 1;
  /* 第二次添加样式 */
}
.follow-container .follow-list-container .follow-list-swiper {
  height: 100%;
}
.follow-container .no-data {
  height: 400rpx;
  line-height: 400rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

