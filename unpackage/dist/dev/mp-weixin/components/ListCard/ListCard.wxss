}
.list-card .list-card-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.list-card .list-card-img image {
  width: 100%;
  height: 100%;
}
.list-card .list-card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  padding-left: 20rpx;
  width: 100%;
}
.list-card .list-card-content .list-card-content-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 100%;
  align-items: flex-start;
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
  line-height: 1.2;
}
.list-card .list-card-content .list-card-content-title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-card .list-card-content-desc {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  font-size: 24rpx;
  width: 100%;
  margin-top: 20rpx;
}
.list-card .list-card-content-desc .article-type {
  padding: 0 10rpx;
  margin-right: 10rpx;
  border-radius: 30rpx;
  color: #f25037;
  border: 1px solid #f25037;
}
.list-card .list-card-content-desc .browse-number {
  color: #999;
  line-height: 1.5;
}
.list-card .list-card-top, .list-card .list-card-middle, .list-card .list-card-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 100%;
}
.list-card.mode-column {
  flex-direction: column;
}
.list-card.mode-column .list-card-top text {
  font-size: 28rpx;
  color: #333333;
}
.list-card.mode-column .list-card-middle {
  margin: 20rpx 0;
}
.list-card.mode-column .list-card-middle .image-container {
  width: 32%;
  border-radius: 10rpx;
  height: 140rpx;
  overflow: hidden;
}
.list-card.mode-column .list-card-middle .image-container image {
  width: 100%;
  height: 100%;
}
.list-card.mode-image {
  flex-direction: column;
}
.list-card.mode-image .image-container {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}
.list-card.mode-image .image-container image {
  width: 100%;
