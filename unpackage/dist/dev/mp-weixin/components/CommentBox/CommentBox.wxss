/* 全局系统样式定义 */
.comment-box {
  margin: 30rpx 0;
}
.comment-box .comment-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  align-items: flex-start;
}
.comment-box .comment-header .comment-header-logo {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.comment-box .comment-header .comment-header-logo image {
  width: 100%;
  height: 100%;
}
.comment-box .comment-header .comment-header-info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: flex-start;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}
.comment-box .comment-header .comment-header-info .title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.comment-box .comment-content {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #000;
}
.comment-box .comment-content .comment-info {
  margin-top: 30rpx;
  display: flex;
}
.comment-box .comment-content .comment-info .comment-button {
  padding: 4rpx 20rpx;
  font-size: 24rpx;
  color: #999;
  border-radius: 40rpx;
  border: 1px solid #ccc;
}
.comment-box-children {
  width: 90%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #cccccc;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.toAuthorName {
  color: #ccc;
  font-size: 24rpx;
}

